@model computan.timesheet.Models.ClientDashboardViewModel
<table class="table text-nowrap">
    @if (Model.projects.Count() == 0)
    {
        <tr>
            <td> No Projects... </td>
        </tr>
    }
    else
    {
        foreach (var project in Model.projects.OrderBy(x => x.name))
        {
            <thead>
            <tr class="active border-double" data-id="@project.project_id">
                <td style="padding-left: 10px !important; width: 20%;">
                    <a class="arrow-css arrow-click" href="#collapsible-@project.project_id" data-toggle="collapse">
                        <span>
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                        </span>
                    </a>
                    <input class="check-all" type="checkbox" data-id="collapsible-@project.project_id" name="@project.name"/>
                    <a href="/project/index/@project.project_id" target="_blank">
                        <strong class="header-text">@project.name</strong>
                    </a>
                </td>
                <td colspan="2">
                    <span class="custom-label bg-warning-700" data-toggle="tooltip" data-placement="top" title="Total Count">@project.tickets_count</span>
                    @foreach (var item in project.status_count)
                    {
                        <span class="custom-label bg-@item.status_color" data-toggle="tooltip" data-placement="top" title="@item.name">@item.count</span>
                    }
                </td>
                <td class="text-right">
                    <button type="button" title="Assign multiple tickets to Users" class="btn btn-success assign-multiple">
                        <i class="icon-task"></i>
                    </button>
                </td>
            </tr>
            </thead>
            <tbody id="collapsible-@project.project_id" class="panel-collapse collapse">
            @if (project.tickets == null || project.tickets.Count() == 0)
            {
                <tr>
                    <td> No Tickets... </td>
                </tr>
            }
            else
            {
                foreach (var item in project.tickets.OrderByDescending(x => x.last_updated))
                {
                    <tr id="@item.ticket_id" class="@project.project_id">
                        <td style="border-left: 20px solid @item.color">
                            <div class="media-left media-middle">
                                <input type="checkbox" class="@project.project_id" value="@item.ticket_id"/>
                            </div>
                            <div class="media-body">
                                <a href="#" class="display-inline-block text-default text-semibold letter-icon-title">@item.sender</a>
                                <div class="text-muted text-size-small">
                                    <span class="status-mark border-@item.color position-left"></span> @item.status
                                </div>
                            </div>
                        </td>
                        <td class="custom-td">
                            <a href="/tickets/ticketitem/@item.ticket_id" target="_blank" class="text-default display-inline-block">
                                <span class="text-semibold">@(item.title.Length > 70 ? item.title.Substring(0, 70) + "..." : item.title) </span>
                                <span class="display-block text-muted">@Html.Raw(item.description)</span>
                            </a>
                        </td>
                        <td class="custom-td">
                            @if (item.assigned_user != null)
                            {
                                foreach (var users in item.assigned_user)
                                {
                                    <div class="display-inline-block">
                                        <div class="label label-success" title="@users.user_name" style="display: inline-block;">
                                            <strong>@users.short_name</strong>
                                        </div>
                                    </div>
                                }
                            }
                        </td>
                        <td class="text-center custom-td">
                            @item.last_updated.ToString("dddd, dd MMMM yyyy")
                        </td>
                    </tr>
                }
            }
            </tbody>
        }
    }
</table>
@*Assign Tickets Model*@
