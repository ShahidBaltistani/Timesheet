@model computan.timesheet.core.NotificationLimitForBilling
@{ ViewBag.Title = "UpdateNotificationLimit"; }

@section header {
    <div style="background-color: #fff;" class="panel page-header border-top-primary">
        <div class="page-header-content">
            <div class="page-title">
                <h5>
                    <i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Timesheet</span> - Manage Notifiction Limit
                    <small class="display-block">Manage Notifiction Limit</small>
                </h5>
            </div>
            <div class="heading-elements">
                <div class="btn-group"> </div>
            </div>
            <a class="heading-elements-toggle">
                <i class="icon-menu"></i>
            </a>
        </div>
        <div style="border-bottom: 0; box-shadow: none; margin-bottom: 0;" class="breadcrumb-line">
            <ul class="breadcrumb">
                <li>
                    <a href="/Home/index"><i class="icon-home2 position-left"></i>Home</a>
                </li>
                <li>
                    <a href="/billings/index">Billing</a>
                </li>
            </ul>
        </div>
    </div>
}

<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">Billing Month @DateTime.Now.ToString("MMMM")</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li>
                    <a data-action="collapse"></a>
                </li>
                <li>
                    <a data-action="reload"></a>
                </li>
            </ul>
        </div>
        <a class="heading-elements-toggle">
            <i class="icon-menu"></i>
        </a>
    </div>
    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
        <div class="datatable-scroll">
            <table class="table">
                <thead>
                <tr role="row">
                    <th> @Html.DisplayNameFor(model => model.NotificationLimit) </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.NotificationLimit)<span>% Billable Hours Consumed</span>
                    </td>
                    <td> @Html.ActionLink("Edit", "updatenotificationlimit", new {Model.id}, new {@class = "btn btn-primary"}) </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <span><b>Note:</b>This limit will be apply for notification sending on billable hours consumed.</span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>