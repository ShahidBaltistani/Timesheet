@model IEnumerable<computan.timesheet.core.Team>
@{ ViewBag.Title = "Teams"; }
<div class="panel panel-default" id="maincontent">
    @Html.Partial("_NavTabs", "teams")
    <div class="panel">
        <div class="panel-heading bg-teal-700">
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-12 col-sm-7">
                        <h4 class="panel-title ticket-title">
                            <span>Teams Listing </span>
                        </h4>
                    </div>
                    <div class="col-xs-12 col-sm-5">
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li>
                                    <button class="label border-left-primary label-striped" onclick="window.location.href = '/teams/create'">Add New Team</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-flat">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
                <div class="datatable-scroll">
                    <table class="table datatable-button-html5-basic" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                        <thead>
                        <tr role="row">
                            <th> @Html.DisplayNameFor(model => model.name) </th>
                            <th> @Html.DisplayNameFor(model => model.code) </th>
                            <th> @Html.DisplayNameFor(model => model.Manager) </th>
                            <th> @Html.DisplayNameFor(model => model.CSM) </th>
                            <th> @Html.DisplayName("Status") </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.name) </td>
                                <td> @Html.DisplayFor(modelItem => item.code) </td>
                                <td> @Html.DisplayFor(modelItem => item.Managers.FullName) </td>
                                <td> @Html.DisplayFor(modelItem => item.CSMS.FullName) </td>
                                <td>
                                    <span class="label @(item.isactive ? "label-success" : "label-danger")">@(item.isactive ? "Active" : "In-Active")</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new {item.id}, new {@class = "btn btn-info btn-xs"})
                                    @Html.ActionLink("Team Members", "index", "teammembers", new {item.id}, new {@class = "btn btn-info btn-xs"})
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>