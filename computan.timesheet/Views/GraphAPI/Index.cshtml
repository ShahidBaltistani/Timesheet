@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<div class="jumbotron">
    <h1>ASP.NET MVC Tutorial</h1>
    <p class="lead">This sample app uses the Mail API to read messages in your inbox.</p>
    @if (Request.IsAuthenticated)
    {
        <p>Welcome, @(ViewBag.UserName)!</p>
    }
    else
    {
        <p>
            <a href="@Url.Action("SignIn", "Graphapi", null, Request.Url.Scheme)" class="btn btn-primary btn-lg">Click here to login</a>
        </p>
    }
</div>