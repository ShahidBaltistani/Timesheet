@model IEnumerable<computan.timesheet.Models.NotificationMessageViewModel>
@if (Model != null && Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <tr id="@item.id" data-status="@item.status" data-actionentityid="@item.EntityActionId" data-entityid="@item.entityId" class="notificationTr">
            <td>
                <input type="checkbox" class="selectnotification" value="@item.id"/>
            </td>
            <td>
                @if (item.EntityActionId == 7)
                {
                    <a href="/tickets/comment/@item.entityId/@item.commentid" target="_blank">@item.Message</a>
                }
                else
                {
                    <a href="/tickets/ticketitem/@item.entityId" target="_blank">@item.Message</a>
                }
            </td>
            <td> @item.createdDate.ToString("dd MMM h:mm tt") </td>
            <td>
                <a href="#">
                    <span class="markicon pull-right @(item.status ? "markunread" : "markread")" data-toggle="tooltip" data-id="@item.id" title="@(item.status ? "Mark Unread" : "Mark Read")" style="cursor: pointer;">
                        <i class="icon-checkmark4 @(item.status ? "notification-color-read" : "notification-color-unread")"></i>
                    </span>
                </a>
            </td>
        </tr>
    }
    <tr id="loadmorenotification">
        <td></td>
        <td colspan="2" class="text-center">
            <button class="btn btn-default loadmorenotifications" data-pagenumber="@ViewBag.pagenum">Load More Notifiaction...</button>
        </td>
        <td></td>
    </tr>
}
else
{
    <tr>
        <td></td><td colspan="2" class="text-center">Sorry, No more Notifications found.</td><td></td>
    </tr>
}