            <!-- Hidden Fields Needed For JS File -->
            <div class="row hidden">
                <div class="pull-right" style="visibility: hidden;">
                    <a href="#" class="btn bg-teal-400 btn-sm btn-labeled btn-labeled-left heading-btn startworking" data-ticketid="@Model.Ticket.id" data-projectid="@(Model.TicketItem != null ? Model.TicketItem.projectid : 0)" data-skillid="@(Model.TicketItem != null ? Model.TicketItem.skillid : 0)" type="button">
                        Start Working
                        <b>
                            <i class="icon-alarm-check"></i>
                        </b>
                    </a>
                </div>
            </div>
            <!-- For ticket Comments Page -->
            <div id="other" class="tab-pane has-padding">
                <div class="comment-container">
                    <div class="header-actions"> </div>
                    <div class="header-content"> </div>
                    <div class="comment_body">
                        <div class="" style="width: 100%;">
                            <textarea name="txtComments" id="txtComments" rows="5" cols="80"></textarea> <br/>
                            <div class="text-right">
                                <button type="button" class="btn bg-blue" id="btnAddComments"><i class="icon-plus22"></i> Add comment</button>
                                <button type="button" class="btn bg-blue" id="btnSaveComments" style="display: none;"><i class="glyphicon-save"></i> Save Comments </button>
                                <button type="button" class="btn bg-blue" id="btnCancelComments" style="display: none;"><i class="glyphicon-save"></i> Cancel</button>
                            </div>
                            <hr/>
                            <div>
                                <div class="panel-body">
                                    <ul class="commentbody media-list content-group-lg stack-media-on-mobile">
                                        @foreach (var Commentitem in Model.TicketComment)
                                        {
                                            <li class='media'>
                                                <div class='media-left'>
                                                    <a href='#'>
                                                        <img id="@Commentitem.id" src='/Content/images/placeholder.jpg' class='img-circle img-sm' alt='Not Loaded'>
                                                    </a>
                                                </div>
                                                <div class='media-body'>
                                                    <div class='media-heading'>
                                                        <a href='#' class='text-semibold'> @Commentitem.commentbyusername </a><span class='media-annotation dotted'> @Commentitem.commenton </span>
                                                    </div>
                                                    @{
                                                        var msg = new HtmlString(Commentitem.commentbody);
                                                        <div id='CommentBody'> @msg </div>
                                                        <br/>
                                                    }
                                                    <ul class='list-inline list-inline-separate text-size-small'>
                                                        <li class='EditComments' data-id="@Commentitem.id">
                                                            <a>Edit</a>
                                                        </li>
                                                        <li class='DeleteComments' data-id="@Commentitem.id">
                                                            <a>Delete</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="media-right">
                                                    <i data-ticketid="@Model.Ticket.id" data-commentid="@Commentitem.id" class="fa fa-clipboard comment-link"></i>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
