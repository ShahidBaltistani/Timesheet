            <div class="panel panel-success panel-bordered">
                <div class="panel-heading">
                    <h6 class="panel-title">My Bucket</h6>
                    <div class="heading-elements">
                        <div class="heading-elements">
                            <button type="button" class="btn btn-link daterange-ranges heading-btn text-semibold">
                                <i class="icon-calendar3 position-left"></i> <span>January 12 - February 10</span> <b class="caret"></b>
                            </button>
                        </div>
                        <ul class="icons-list">
                            <li><a data-action="collapse"></a></li>
                        </ul>
                    </div>
                    <a class="heading-elements-toggle"><i class="icon-menu"></i></a>
                </div>
                <div class="panel-body" id="mybucketsdahsboard">
                    @Html.Partial("~/views/tickettimelogs/_mybucket.cshtml", Model.TicketTimeViewModel)
                </div>
            </div>
        </div>*@
</div>
