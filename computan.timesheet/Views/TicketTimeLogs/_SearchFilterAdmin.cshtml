@model computan.timesheet.Models.TicketTimeSearchViewModel
@using (Html.BeginForm("Team", "TicketTimeLogs", FormMethod.Post, new {@class = "form-inline"}))
{
<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon">
            <i class="icon-calendar3"></i>
        </span>
        @Html.TextBoxFor(model => model.StartDate, new { Value = Model.StartDate.ToString("MM/dd/yyyy"), @class = "form-control picker  default-margin-for" })
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="icon-calendar3"></i>
        </span>
        @Html.TextBoxFor(model => model.EndDate, new { Value = Model.EndDate.ToString("MM/dd/yyyy"), @class = "form-control picker  default-margin-for" })
    </div>
    <div class="input-group">
        @Html.DropDownListFor(model => model.clientid, Model.ClientCollection.OrderBy(x => x.Text), "Select Client", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.clientid)
    </div>
    <div class="input-group">
        @Html.DropDownListFor(model => model.projectid, Model.ProjectCollection.OrderBy(x => x.Text), "Select Project", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.projectid)
    </div>
    <div class="input-group">
        @Html.DropDownListFor(model => model.teamuserid, Model.UsersCollection.OrderBy(x => x.Text), "Select User", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.teamuserid)
    </div>
    <div class="input-group">
        <button type="submit" class="btn btn-success form-control"> <span class="glyphicon glyphicon-search"></span> Search </button>
    </div>

    <div class="input-group">
        <span id="text" hidden>
            @ViewData["link"]
        </span>
        <a class="btn btn-primary form-control" onclick="copyToClipboard()" style="color:#FFF;">
            Copy Search Link
            &nbsp; &nbsp;
            <i class="fa fa-clipboard" title="Copy to Clipboard">

            </i>
        </a>
        @*<span class="ticketidonspan" value="ViewData['link']"></span>*@
    </div>
</div>
}
<script type="text/javascript">
    $(function () {
        $(".picker").datepicker({ dateFormat: 'mm/dd/yy' });
        $(".picker").css('width', "100px");
    });
</script>