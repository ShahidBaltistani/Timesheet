@model List<computan.timesheet.core.Ticket>
@{ ViewBag.Title = "Preview Rule"; }

@section header {
    <div style="background-color: #fff;" class="panel page-header border-top-primary">
        <div class="page-header-content">
            <div class="page-title">
                <h5>
                    <i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Timesheet</span> - Preview Rule
                    <small class="display-block">preview the list of tickets that will be affected by this rule.</small>
                </h5>
            </div>
            <div class="heading-elements">
                <div class="btn-group">
                    <a href="/rules/" class="btn btn-primary"><i class="icon-list3 position-left"></i>List All Rules</a>
                    <a href="/rules/executerule/@ViewBag.ruleid" class="btn btn-success"><i class="icon-list3 position-left"></i>Execute Rule</a>
                </div>
            </div>
            <a class="heading-elements-toggle">
                <i class="icon-menu"></i>
            </a>
        </div>
        <div style="border-bottom: 0; box-shadow: none; margin-bottom: 0;" class="breadcrumb-line">
            <ul class="breadcrumb">
                <li>
                    <a href="/home/index"><i class="icon-home2 position-left"></i>Home</a>
                </li>
                <li>
                    <a href="/rules/index">Rules</a>
                </li>
                <li>
                    <a href="/rules/preview/@ViewBag.ruleid">Preview</a>
                </li>
            </ul>
        </div>
    </div>
}

<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">List All Rules</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li>
                    <a data-action="collapse"></a>
                </li>
                <li>
                    <a data-action="reload"></a>
                </li>
            </ul>
        </div>
        <a class="heading-elements-toggle">
            <i class="icon-menu"></i>
        </a>
    </div>
    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
        <div class="datatable-scroll">
            <table class="table datatable-button-html5-basic" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.FirstOrDefault().uniquesenders) </th>
                    <th> @Html.DisplayNameFor(model => model.FirstOrDefault().topic) </th>
                    <th></th>
                </tr>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.uniquesenders </td>
                            <td> @item.topic </td>
                            <td></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">Sorry, no ticket matched the rule you specified.</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>