@model computan.timesheet.core.RuleCondition
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Add New Condition</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            <div class="col-md-12">
                @Html.DropDownList("ruleconditiontypeid", null, "Please Select Rule Condition Type", new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.ruleconditiontypeid, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.ruleconditionvalue, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ruleconditionvalue, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group hide andordiv">
            <div class="col-md-12">
                <label class="radio-inline"> @Html.RadioButtonFor(model => model.isrequired, "true")And<br> </label>
                <label class="radio-inline"> @Html.RadioButtonFor(model => model.isrequired, "false")Or<br> </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-center">
                <input id="btnsavecondition" type="submit" value="Save new condition" class="btn btn-default"/>
                <button id="cancelrulecondition" class="btn btn-default">Cancal</button>
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.id)
}
<script>
    jQuery("#ruleconditiontypeid").select2();
</script>