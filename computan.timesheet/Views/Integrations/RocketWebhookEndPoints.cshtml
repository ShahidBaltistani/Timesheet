@model List<computan.timesheet.core.Team>
@{
    ViewBag.Title = "RocketwebhookEndPoints";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="sidebar-detached">
    <div class="sidebar sidebar-default">
        <div class="sidebar-content">
            <div class="sidebar-category">
                <div class="category-title">
                    <span>Navigation</span>
                    <ul class="icons-list">
                        <li>
                            <a href="#" data-action="collapse"></a>
                        </li>
                    </ul>
                </div>
                <div class="category-content no-padding">
                    <ul class="navigation navigation-alt navigation-accordion">
                        <li class="">
                            <a href="/Integrations/Index"><i class="icon-earth"></i>Freedcamp</a>
                        </li>
                        <li class="active">
                            <a href="/Integrations/RocketWebhookEndPoints"><i class="icon-rocket"></i>Rocket EndPoint</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-detached">
    <div class="content-detached">
        <div class="panel">
            <div class="panel-heading bg-teal-700">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-10">
                            <h4 class="panel-title">
                                <span>Rocket Webhook Setting</span>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                @foreach (var item in Model)
                {
                    using (Html.BeginForm("EditRocketUrl", "Integrations", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h2>@item.name</h2>
                            <input type="text" hidden value="@item.id" name="Id"/>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => item.RocketUrl, new {@class = "control-label"})
                                    <input type="text" value="@item.RocketUrl" name="RocketUrl" class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Save" class="btn btn-primary btn-labeled-right"/>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<script>
    var body = document.body;
    body.classList.add('has-detached-left');
</script>